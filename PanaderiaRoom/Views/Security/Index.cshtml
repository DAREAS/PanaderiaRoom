
@{
    ViewData["Title"] = "Index";
}

<div class="container-login100">
    <div class="wrap-login100 p-l-55 p-r-55 p-t-80 p-b-30">
        @using (Html.BeginForm("LogOn", "Security", null, FormMethod.Post, true, new { @class = "login100-form validate-form" })) {
            <span class="login100-form-title p-b-37">
                Sign In
            </span>

            <div class="wrap-input100 validate-input m-b-20" data-validate="Enter username or email">
                <input class="input100" type="text" name="username" placeholder="username or email">
                <span class="focus-input100"></span>
            </div>

            <div class="wrap-input100 validate-input m-b-25" data-validate="Enter password">
                <input class="input100" type="password" name="password" placeholder="password">
                <span class="focus-input100"></span>
            </div>

            <div class="container-login100-form-btn">
                <button class="login100-form-btn">
                    Sign In
                </button>
            </div>
        }
        <div class="text-center p-t-57 p-b-20">
            <span class="txt1">
                Or login with
            </span>
        </div>

        @using (Html.BeginForm("SocialLogin", "Security", null, FormMethod.Post, true, new { id = "socialForm" })) {
            <div class="flex-c p-b-112">
                @Html.Hidden("socialType", "", new { id = "socialType", name = "socialType" })

                <a href="#" onclick="selectSocialType('Facebook')" class="login100-social-item">
                    <i class="fa fa-facebook-f" title="Facebook"></i>
                </a>

                <a href="#" onclick="selectSocialType('Google')" class="login100-social-item">
                    <img src="images/icons/icon-google.png" title="Google" alt="Google" />
                </a>
                <a href="#" onclick="selectSocialType('GIM')" class="login100-social-item">
                    <img src="images/icons/fingerprint-dark.png" title="GIM - OpenId" alt="GIM - OpenId" />
                </a>
            </div>
        }
        <div class="text-center">
            <a href="#" class="txt2 hov1">
                Sign Up
            </a>
        </div>
    </div>
</div>



